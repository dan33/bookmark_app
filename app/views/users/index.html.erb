<%= render 'groups/header' %>

<div class="small-12 columns">
  <h2>Members</h2>
  <% @group.users.each do |user| %>
  <div class="small-4 columns content">
    <ul class="no-bullet">
    <li><h4><%= link_to user.name, group_user_path(@group, user) %></h4></li>
    <li>Created <%= user.topics.count %> topic</li>
    <li>Posted <%= user.items.count %> items</li>
    <li>Belongs to <%= user.memberships.count %> group</li>
    </ul>
  </div>
  <% end %>
</div>