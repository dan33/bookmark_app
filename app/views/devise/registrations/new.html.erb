<div class="large-12 columns">
  <h4>Sign up</h4>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="large-12 columns">
    <div class="large-4 columns">
      <%= f.input :name, label: false, :required => true, :autofocus => true, :input_html => { placeholder: "First name" } %>
      <%= f.input :email, label: false, :required => true, :input_html => { placeholder: "Email" } %>
      <%= f.input :password, label: false, :required => true, :input_html => { placeholder: "Password" } %>
      <%= f.input :password_confirmation, label: false, :required => true, :input_html => { placeholder: "Confirm Password" } %>
      <% f.error :base %>
      <%= f.button :submit, "Sign up", :class => 'small button' %>
      <% end %>
    </div>
  </div>

<div class="large-12 columns">
  <%= render "devise/shared/links" %>
</div>