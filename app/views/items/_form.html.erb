<%= simple_form_for @item do |f| %>
<%= f.error_notification %>
      <%= f.input :title, label: false, :required => true, :as => :text, :input_html => { placeholder: "Title", :rows => 1, :min => 10, :maxlength => 450 } %>
      <%= f.input :url, label: false, :required => true, :as => :text, :input_html => { placeholder: "URL", :rows => 1, :maxlength => 450 } %>
      <%= f.input :description, label: false, :required => true, :as => :text, :input_html => { placeholder: "Description", :rows => 3, :maxlength => 450 } %>
      <%= f.association :topic, label: false, :required => true %>
      <% f.error :base %>

      <%= f.submit nil, :class => 'button'%>
      <%= link_to 'Cancel', items_path, :class => 'small button' %>
<% end %>