<%= render 'groups/header' %>

<div class="row bottom-padding">
  <div class="small-12 columns">
    <h4><%= link_to @item.title, @item.url %> <small><em> <%= link_to 'Edit', edit_group_item_path(@group, @item) if @user.groups.include?(@group) %></em></small></h4>
    <p><%= @item.description %></p>
  </div>

  <div class="small-4 columns">
    <h4>Comments</h4>
    <%= render "comments/comments" %>
    <p><%= render "comments/form" if @user.groups.include?(@group) %></p>
  </div>
  <%= render 'back' %>
</div>