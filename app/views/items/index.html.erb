<div class="row">
  <div class="span9">
	  <h3> Links </h3>
			<%= link_to 'New item', new_item_path(@item), :class => 'btn btn-primary'%>
  </div>
</div>

  <br />

  <div class="row-fluid">
  <% @items.each do |item| %>
	  <div class="span4 well">
      <i class="icon-edit pull-right"><%= link_to 'Edit', edit_item_path(item) %> </i>
	      <h4><%= link_to item.title, item.url %></h4>
      	<p><%= item.description %></p>
    </div>
    <% end %>
  </div>

  <%= will_paginate @items, :renderer => BootstrapPagination::Rails %>
</div>