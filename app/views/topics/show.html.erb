<%= render 'groups/header' %>

<div class="row">
  <div class="small-12 columns">
    <div class="small-8 columns">
    <h3><%= @topic.name %> <small> <%= @topic.description %></small></h3>
  </div>
  <div class="small-4 columns">
    <%= link_to 'Edit topic', edit_group_topic_path(@group, @topic), :class => 'tiny button'%>
  </div>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
  <% @topic.items.each do |item| %>
    <div class="small-4 columns content">
      <i class="pull-right"><%= link_to 'Edit', edit_group_item_path(@group, item) %> </i>
        <h4><%= link_to item.title, item.url %></h4>
        <p><%= truncate(item.description, length: 75) %></p>
        <p><%= link_to 'comments', group_item_path(@group, item) %> <span class="label label-warning"><%= item.comments.count %></span></p>
    </div>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12">
  <%= render 'back' %>
  </div>
</div>