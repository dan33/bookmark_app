<%= simple_form_for [@group, @topic] do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :name, label: false, :required => true, :input_html => { placeholder: "Name", :rows => 1, :min => 10, :maxlength => 450 } %>
  <%= f.input :description, label: false, :required => true, :as => :text, :input_html => { placeholder: "Description", :rows => 5, :maxlength => 450 } %>
  <% f.error :base %>
</div>

  <div class="actions">
    <%= f.submit nil, :class => 'button'%>
    <%= link_to 'Cancel', group_topic_path(@group, @topic), :class => 'small button' %>
  </div>
<% end %>