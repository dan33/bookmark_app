<%= simple_form_for @topic do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :name, label: false, :required => true, :as => :text, :input_html => { placeholder: "Name", :rows => 1, :min => 10, :maxlength => 450, :class => "span5"} %>
  <%= f.input :description, label: false, :required => true, :as => :text, :input_html => { placeholder: "Description", :rows => 3, :maxlength => 450, :class => "span5" } %>
  <% f.error :base %>
</div>

  <div class="actions">
    <%= f.submit nil, :class => 'btn btn-primary'%>
    <%= link_to 'Cancel', topics_path, :class => 'btn' %>
  </div>
<% end %>